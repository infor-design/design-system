{
  "name": "ids-identity",
  "version": "2.1.0",
  "description": "Infor Design System Design Assets",
  "scripts": {
    "build": "node ./scripts/node/build.js --build=tokens,icons,fonts",
    "build:icons": "node ./scripts/node/build.js --build=icons",
    "build:tokens": "node ./scripts/node/build.js --build=tokens",
    "build:fonts": "node ./scripts/node/build.js --build=fonts",
    "assets": "npm run build && bash ./scripts/deploy-assets.sh -e local",
    "assets:staging": "npm run build && bash ./scripts/deploy-assets.sh -e staging",
    "assets:prod": "npm run build && bash ./scripts/deploy-assets.sh -e prod",
    "clean": "del ./dist/*/* && del ./IDS-*.zip",
    "mdlint": "npx markdownlint --ignore=dist *.md **/*.md",
    "test": "npm run mdlint",
    "zip": "bash ./scripts/package-release.sh",
    "release:beta": "npx release-it minor --preRelease=beta --no-github.release",
    "release:rc": "npx release-it --preRelease=rc --no-github.release",
    "release:final": "npx release-it"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/infor-design/design-system/blob/master/README.md"
  },
  "keywords": [
    "infor design system"
  ],
  "author": "Hook & Loop",
  "license": "Apache-2.0",
  "devDependencies": {
    "chalk": "^2.4.2",
    "copy-dir": "^0.3.0",
    "del": "^3.0.0",
    "del-cli": "^1.1.0",
    "glob": "^7.1.3",
    "handlebars": "^4.0.12",
    "lodash": "^4.17.11",
    "log-symbols": "^2.2.0",
    "minimist": "^1.2.0",
    "npm-which": "^3.0.1",
    "path": "^0.12.7",
    "style-dictionary": "^2.7.0",
    "svgo": "^1.0.5"
  },
  "files": [
    "dist/"
  ],
  "dependencies": {
    "markdownlint-cli": "^0.13.0"
  }
}
