{
  "private": true,
  "name": "@infor/ids-web-tokens",
  "version": "1.0.0-alpha.1",
  "description": "Infor Design System Design Tokens",
  "scripts": {
    "build": "npm run build:default && npm run build:dark && npm run build:hc",
    "build:default": "theo ./ids-web-tokens.yml --format custom-properties.css,json,raw.json --dest ./dist",
    "build:dark": "theo ./ids-web-tokens_dark.yml --format custom-properties.css,json,raw.json --dest ./dist",
    "build:hc": "theo ./ids-web-tokens_high-contrast.yml --format custom-properties.css,json,raw.json --dest ./dist",
    "clean": "del dist/*",
    "prepublishOnly": "npm test && npm run build",
    "test": "yamllint ./*.yml"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/infor-design/design-system/blob/master/README.md"
  },
  "keywords": [
    "design tokens",
    "infor design system",
    "web"
  ],
  "author": "Hook & Loop",
  "license": "UNLICENSED",
  "devDependencies": {
    "del-cli": "^1.1.0",
    "theo": "^6.0.0-beta.9",
    "yaml-lint": "^1.0.0"
  },
  "files": [
    "dist"
  ]
}
